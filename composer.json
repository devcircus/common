{
    "name": "bright-components/common",
    "description": "Common components for BrightComponents packages.",
    "version": "0.1.1",
    "keywords": [
        "bright-components",
        "contracts",
        "common"
    ],
    "homepage": "https://github.com/bright-components/common",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@phpstage.com",
            "homepage": "https://codestage.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.6.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BrightComponents\\Common\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightComponents\\Common\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightComponents\\Common\\BrightComponentsServiceProvider"
            ]
        }
    }
}
